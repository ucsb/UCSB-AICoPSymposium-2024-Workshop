        </div>
        <div class="col-12 col-sm-10 col-md-10">
        {% if node.field_events_newsletters_end.value %}       
            <p>{{ node.field_events_newsletters_start.value|date_modify('-8 hours')|date("l, F j, Y") }}   {{ node.field_events_newsletters_start.value|date_modify('-8 hours')|date("g:i a") }} - {{ node.field_events_newsletters_end.value|date_modify('-8 hours')|date("g:i a") }} PST</p>
        {% else %}
            <p>{{ node.field_events_newsletters_start.value|date_modify('-8 hours')|date("l, F j, Y, g:i a") }} PST</p>
        {% endif %} 

        </div>
      </div>
      <br/>
    {% endif %}


    {# Event Location #}
    {% if node.field_events_newsletters_loc|length > 0 %}
      <div class="event-details-row row">
        <div class="col-12 col-sm-2 col-md-2">
