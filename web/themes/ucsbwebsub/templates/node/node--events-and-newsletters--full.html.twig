        </div>
        <div class="col-12 col-sm-10 col-md-10">
            {% for item in node.field_events_newsletters_loc  %}
                <p class="">{{ item.value }}</p>
            {% endfor %}
        </div>
      </div>
      <br/>
    {% endif %}

    {# Event Category #}
    {% if node.field_events_newsletters_type %}
      <div class="event-details-row row">
        <div class="col-12 col-sm-2 col-md-2">&nbsp;</div>
        <div class="col-12 col-sm-10 col-md-10">
            
          Category: {{ content.field_events_newsletters_type[0]['#title'] }} event
        </div>
      </div>
      <br/>
    {% endif %}

    {# Event Body #}
    <div class = "col-12 col-sm-12 col-md-12 event-description" style = "height: 100%;">
      <div class="col-sm-12 col-md-12 has-background background-color-eef0f2" style="padding-right: 25px; padding-left:25px">
        <p>{{node.body.value | raw}}</p>
      </div>
    </div>

    </div>
  </div>
</article>
